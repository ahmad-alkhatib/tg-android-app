<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/segment_stroke" android:color="@color/colorSegmentStroke" />
                    <corners android:bottomRightRadius="@dimen/general" android:topRightRadius="@dimen/general" />
                </shape>
            </item>

            <item android:bottom="@dimen/segment_stroke" android:right="@dimen/segment_stroke" android:top="@dimen/segment_stroke">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorSegmentSelected" />
                    <corners android:bottomRightRadius="@dimen/general" android:topRightRadius="@dimen/general" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/segment_stroke" android:color="@color/colorSegmentStroke" />
                    <corners android:bottomRightRadius="@dimen/general" android:topRightRadius="@dimen/general" />
                </shape>
            </item>

            <item android:bottom="@dimen/segment_stroke" android:right="@dimen/segment_stroke" android:top="@dimen/segment_stroke">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorSegmentSelected" />
                    <corners android:bottomRightRadius="@dimen/general" android:topRightRadius="@dimen/general" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/segment_stroke" android:color="@color/colorSegmentStroke" />
                    <corners android:bottomRightRadius="@dimen/general" android:topRightRadius="@dimen/general" />
                </shape>
            </item>
            <item android:bottom="@dimen/segment_stroke" android:right="@dimen/segment_stroke" android:top="@dimen/segment_stroke">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorSegment" />
                    <corners android:bottomRightRadius="@dimen/general" android:topRightRadius="@dimen/general" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>