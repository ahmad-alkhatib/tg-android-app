<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/white_fragment_dialog_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/large"
    android:paddingBottom="@dimen/large">

    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="@dimen/extra_larger"
        android:layout_height="@dimen/extra_larger"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/loader_message"
        style="@style/textRegular"
        android:text="@string/please_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_large"
        android:textSize="@dimen/text_size_regular_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loader" />

</LinearLayout>

