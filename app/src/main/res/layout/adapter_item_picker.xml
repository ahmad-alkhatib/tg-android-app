<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rootLayout"
    android:layout_height="wrap_content"
    android:background="@drawable/button_transparent_bg">

    <TextView
        android:id="@+id/textView"
        style="@style/textRegularMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/medium"
        android:paddingEnd="@dimen/general"
        android:paddingTop="@dimen/large"
        android:paddingBottom="@dimen/large"
        app:layout_constraintEnd_toStartOf="@+id/tickImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tickImageView"
        android:layout_width="@dimen/extra_large"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/large"
        android:adjustViewBounds="true"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_tick" />

    <View
        style="@style/themeDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>